<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/article_toolbar"
        layout="@layout/view_toolbar" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y70">
    <android.support.design.widget.TabLayout
        android:id="@+id/tl_article_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y70"
        android:background="@color/white"
        app:tabIndicatorColor="@color/groupbuying_price"
        app:tabSelectedTextColor="@color/groupbuying_price"
        app:tabTextColor="@color/activity_text"
        />
        <View
            android:layout_width="@dimen/x4"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/divider_gray"/>

    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_article_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


</LinearLayout>