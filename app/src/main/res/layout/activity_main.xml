<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.mperfit.perfit.widget.NoScrollViewPager
            android:id="@+id/vp_main_viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/activity_itemdivider" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/tl_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/ll_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x55"
                    android:layout_marginTop="@dimen/y18"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/iv_tab_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tab_selesthome" />

                    <TextView
                        android:id="@+id/tv_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y8"
                        android:text="首页"
                        android:textColor="@color/groupbuying_price"
                        android:textSize="@dimen/x20" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_community"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x120"
                    android:layout_marginTop="@dimen/y20"
                    android:layout_toRightOf="@+id/ll_home"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/iv_tab_community"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tab_community" />

                    <TextView
                        android:id="@+id/tv_community"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y8"
                        android:text="社区"
                        android:textColor="@color/activity_text"
                        android:textSize="@dimen/x20" />


                </LinearLayout>


                <ImageView
                    android:id="@+id/iv_release"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@drawable/tab_release" />


                <LinearLayout
                    android:id="@+id/ll_competition"
                    android:layout_marginTop="@dimen/y18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x90"
                    android:layout_toRightOf="@+id/iv_release"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/iv_tab_competition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tab_game" />

                    <TextView
                        android:id="@+id/tv_competition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y8"
                        android:text="赛事"
                        android:textColor="@color/activity_text"
                        android:textSize="@dimen/x20" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x55"
                    android:layout_marginTop="@dimen/y18"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/iv_tab_me"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tab_user_default" />

                    <TextView
                        android:id="@+id/tv_me"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y8"
                        android:text="我的"
                        android:textColor="@color/activity_text"
                        android:textSize="@dimen/x20" />


                </LinearLayout>


            </RelativeLayout>


        </FrameLayout>


    </LinearLayout>


</RelativeLayout>


