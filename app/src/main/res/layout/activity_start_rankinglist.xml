<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/view_new_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:background="@color/divider_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_day_ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:text="日榜" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/y50"
            android:background="@color/star_ranking_tab_divider" />

        <TextView
            android:id="@+id/tv_week_ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="周榜" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/y50"
            android:background="@color/star_ranking_tab_divider" />

        <TextView
            android:id="@+id/tv_month_ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="月榜" />

    </LinearLayout>


    <com.mperfit.perfit.widget.NoScrollViewPager
        android:id="@+id/no_scoll_viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.mperfit.perfit.widget.NoScrollViewPager>


</LinearLayout>