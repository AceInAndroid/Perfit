<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/vp_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y390"
        app:banner_pageChangeDuration="3000"
        app:banner_pointAutoPlayAble="true"
        app:banner_pointContainerBackground="@android:color/transparent"
        app:banner_pointDrawable="@drawable/home_banner_point"
        app:banner_pointTopBottomMargin="@dimen/x10"
        app:banner_transitionEffect="alpha"
        app:banner_indicatorGravity="bottom"
        app:banner_tipTextSize="@dimen/x28" />



</LinearLayout>