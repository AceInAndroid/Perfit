<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="4dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <com.mperfit.perfit.widget.SquareImageView
                android:id="@+id/iv_class_item_image"
                android:layout_width="@dimen/list_image_size"
                android:layout_height="@dimen/list_image_size"
                android:transitionName="shareView" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <com.mperfit.perfit.widget.MyRatingBar
                    android:id="@+id/mrb_class_detail_ratingbar"
                    android:layout_toRightOf="@+id/tv_class_shoptitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    app:star_width="12dp"
                    app:star_height="11dp"
                    app:space_width="2dp"
                    app:star_solid="@drawable/lesson_selectstar"
                    app:star_hollow="@drawable/lesson_star"
                    app:star_rating="4.2"
                    app:star_isIndicator="true"
                    app:star_max="5"/>
                <TextView
                    android:id="@+id/tv_score"
                    android:text="(4.2)"
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_class_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:text="111111111"
                    android:textStyle="bold"
                    android:textColor="@color/groupbuying_price"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_class_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="17dp"
                    android:text="上午10点-下午16点"
                    android:textColor="@color/activity_text"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_class_item_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:text="荷尔蒙综合体能训练馆"
                    android:layout_marginTop="14dp"
                    android:textColor="@color/activity_text"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/tv_class_item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:gravity="left"
                        android:text="198元/位"
                        android:textStyle="bold"
                        android:textColor="@color/activity_hotprice_text"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_class_item_oldprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:paddingRight="20dp"
                        android:text="¥525"
                        android:textColor="@color/tab_article_textcolor"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_class_item_site"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="18dp"
                        android:layout_weight="10"
                        android:gravity="right"
                        android:text="中关村"
                        android:textColor="@color/class_item_dis_text"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_class_item_site_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="111m"
                        android:textColor="@color/class_item_dis_text"
                        android:textSize="10sp" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
</LinearLayout>