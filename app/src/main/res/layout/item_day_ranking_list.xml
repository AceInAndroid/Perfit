<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/ll_all"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_height="@dimen/y140">

        <ImageView
            android:id="@+id/iv_decorate"
            android:layout_marginTop="@dimen/y16"
            android:layout_marginLeft="@dimen/x26"
            android:background="@drawable/red_no1"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/y90"
            android:layout_marginTop="@dimen/y30"
            android:layout_marginLeft="@dimen/x30"
            android:scaleType="centerCrop"
            android:transitionName="head" />

        <TextView
            android:id="@+id/tv_decorate"
            android:textSize="@dimen/x14"
            android:paddingTop="@dimen/x2"
            android:paddingBottom="@dimen/x2"
            android:paddingLeft="@dimen/x8"
            android:paddingRight="@dimen/x8"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/item_day_ranking_list_bg_nomal"
            android:layout_marginLeft="@dimen/x54"
            android:layout_marginTop="@dimen/y42"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/y22" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/x30"
        android:textColor="@color/activity_text"
        android:layout_marginLeft="@dimen/x30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <TextView
        android:layout_gravity="center_vertical"
        android:text="活跃度:"
        android:textStyle="bold"
        style="@style/text_24_333"
        android:layout_marginRight="@dimen/x4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_liveness"
        android:layout_gravity="center_vertical"
        style="@style/text_24_333"
        android:layout_marginRight="@dimen/x30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




</LinearLayout>