<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/ranking_bg"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y210">


        <ImageView
            android:id="@+id/iv_decorate"
            android:layout_marginTop="@dimen/y28"
            android:layout_marginLeft="@dimen/x18"
            android:background="@drawable/red_no1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/y120"
            android:layout_marginTop="@dimen/y56"
            android:layout_marginLeft="@dimen/x30"
            android:src="@drawable/personal_bg"
            android:scaleType="centerCrop"
            android:transitionName="head" />

        <TextView
            android:id="@+id/tv_decorate"
            android:text="No1"
            android:textSize="@dimen/x22"
            android:paddingTop="@dimen/x2"
            android:paddingBottom="@dimen/x2"
            android:paddingLeft="@dimen/x8"
            android:paddingRight="@dimen/x8"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/item_ranking_num"
            android:layout_marginLeft="@dimen/x59"
            android:layout_marginTop="@dimen/y62"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/x62"
            android:layout_height="@dimen/y30" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_gravity="center_vertical"
        android:text="joke"
        android:textSize="@dimen/x30"
        android:textColor="@color/ranking_num1_bg"
        android:layout_marginLeft="@dimen/x30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <TextView
        android:layout_gravity="center_vertical"
        android:text="活跃度:"
        android:textStyle="bold"
        style="@style/text_24_333"
        android:layout_marginRight="@dimen/x4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_liveness"
        android:layout_gravity="center_vertical"
        android:text="12011"
        style="@style/text_24_333"
        android:layout_marginRight="@dimen/x30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




</LinearLayout>