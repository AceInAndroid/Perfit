<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="5dp">

    <FrameLayout
        android:id="@+id/fl_sort"
        android:layout_width="@dimen/x228"
        android:layout_height="@dimen/x228">

      <com.mperfit.perfit.widget.RoundImageViewLast
            android:id="@+id/iv_sort_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            app:type="round"
            app:borderRadius="10dp"
            />



        <TextView
            android:textSize="13sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@+id/iv_sort_text"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="@dimen/x170"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_sort_img"
            />


    </FrameLayout>


</RelativeLayout>