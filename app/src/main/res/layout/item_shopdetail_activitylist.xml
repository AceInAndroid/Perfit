<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/x330"
        android:layout_height="@dimen/y216"
        android:layout_marginBottom="@dimen/y15"
        android:layout_marginTop="@dimen/y15"
        android:transitionName="shareView"
        />

    <LinearLayout
        android:layout_marginLeft="@dimen/x20"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y216">

        <TextView
            android:id="@+id/tv_couse_title"
            style="@style/text_26_333"
            android:layout_weight="1"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/y20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_activity_data"
            android:layout_marginTop="@dimen/y20"
            android:layout_weight="1"
            android:textSize="@dimen/x24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_marginTop="@dimen/y15"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_course_hotprice"
                android:textSize="@dimen/x28"
                android:textColor="@color/activity_hotprice_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_older_price"
                android:layout_marginLeft="@dimen/x10"
                android:textSize="@dimen/x26"
                android:textColor="@color/old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>