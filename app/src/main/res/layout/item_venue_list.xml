<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="4dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:paddingBottom="@dimen/x20"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/iv_class_item_image"
                android:layout_width="@dimen/y340"
                android:layout_height="@dimen/y288"
                android:scaleType="centerCrop"

                android:transitionName="shareView" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/x20"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:maxLines="2"
                android:layout_weight="1"
                android:ellipsize="end"
                android:layout_marginStart="8dp"
                android:lineSpacingExtra="@dimen/x8"
                android:textColor="@color/text_black"
                android:textSize="@dimen/x30" />

            <TextView
                android:id="@+id/tv_item_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:maxLines="2"
                android:layout_weight="1"
                android:ellipsize="end"
                android:layout_marginStart="8dp"
                android:layout_marginTop="@dimen/x30"
                android:textColor="@color/text_color_gray"
                android:lineSpacingExtra="@dimen/x6"
                android:textSize="@dimen/x24" />

            <TextView
                android:id="@+id/tv_item_shop"
                android:layout_width="@dimen/x120"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:maxWidth="@dimen/x120"
                android:padding="@dimen/x4"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginStart="8dp"
                android:layout_marginTop="@dimen/x30"
                android:background="@drawable/neargrreen"
                android:textColor="@color/white"
                android:textSize="@dimen/x24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/x30">

                <TextView
                    android:id="@+id/tv_item_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:gravity="left"
                    android:drawablePadding="@dimen/x10"
                    android:drawableLeft="@drawable/venu_address"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/x24" />




                <TextView
                    android:id="@+id/tv_class_item_site_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/class_item_dis_text"
                    android:textSize="@dimen/x24" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>